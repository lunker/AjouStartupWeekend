<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rental_card_view"
    android:layout_width="150dp"
    android:layout_height="150dp" >

    <ImageView
        android:id="@+id/cmc_grid_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#DADADC" >
    </View>

    <LinearLayout
        android:id="@+id/cmc_fragment_layout_sns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/cmc_sns_like"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/cmc_sns_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" >
        </TextView>
        
         <ImageView
            android:id="@+id/cmc_sns_hate"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/cmc_sns_hate_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" >
        </TextView>
    </LinearLayout>

</android.support.v7.widget.CardView>